{
  "name": "@neurodevs/node-biosignal-processing",
  "version": "0.0.1",
  "description": "Biosignal processing for EEG, PPG, and more in Node.js",
  "type": "module",
  "keywords": [
    "nodejs",
    "typescript",
    "tdd",
    "biosignals",
    "eeg",
    "ppg"
  ],
  "license": "MIT",
  "author": "Eric Yates <hello@ericthecurious.com>",
  "homepage": "https://github.com/neurodevs/node-biosignal-processing",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neurodevs/node-biosignal-processing.git"
  },
  "bugs": {
    "url": "https://github.com/neurodevs/node-biosignal-processing/issues"
  },
  "main": "build/index.js",
  "scripts": {
    "build.ci": "yarn run build.tsc && yarn run build.resolve-paths && yarn run lint",
    "build.dev": "yarn run build.tsc --sourceMap ; yarn run resolve-paths.lint",
    "build.copy-files": "mkdir -p build && rsync -avzq --exclude='*.ts' ./src/ ./build/",
    "build.resolve-paths": "resolve-path-aliases --target build --patterns '**/*.js,**/*.d.ts'",
    "build.tsc": "yarn run build.copy-files && tsc",
    "clean": "yarn run clean.build",
    "clean.all": "yarn run clean.dependencies && yarn run clean.build",
    "clean.build": "rm -rf build/",
    "clean.dependencies": "rm -rf node_modules/ package-lock.json yarn.lock",
    "fix.lint": "eslint --fix --cache '**/*.ts'",
    "lint": "eslint --cache '**/*.ts'",
    "lint.tsc": "tsc -p . --noEmit",
    "post.watch.build": "yarn run build.copy-files && yarn run build.resolve-paths",
    "rebuild": "yarn run clean.all && yarn install && yarn run build.dev",
    "update.dependencies": "yarn run clean.dependencies && yarn",
    "resolve-paths.lint": "yarn run build.resolve-paths ; yarn run lint",
    "test": "jest",
    "watch.build.dev": "tsc-watch --sourceMap --onCompilationComplete 'yarn run post.watch.build'",
    "watch.rebuild": "yarn run clean.all && yarn install && yarn run watch.build.dev",
    "watch.tsc": "tsc -w"
  },
  "dependencies": {
    "@neurodevs/node-xdf": "^1.4.6",
    "canvas": "^3.2.0",
    "plotly.js-dist-min": "^3.3.0"
  },
  "devDependencies": {
    "@neurodevs/fake-node-core": "0.10.0",
    "@neurodevs/generate-id": "1.1.2",
    "@neurodevs/node-tdd": "0.2.3",
    "@sprucelabs/jest-json-reporter": "^10.0.6",
    "@sprucelabs/resolve-path-aliases": "^4.0.4",
    "@sprucelabs/test": "^11.0.0",
    "@sprucelabs/test-utils": "^7.0.9",
    "@types/node": "^24.10.1",
    "@types/plotly.js-dist-min": "^2.3.4",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.39.1",
    "eslint-config-spruce": "^11.2.26",
    "jest": "^30.2.0",
    "jest-circus": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.9.3"
  },
  "skill": {
    "namespace": "node-biosignal-processing"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1",
      "^plotly.js-dist-min$": "<rootDir>/build/testDoubles/Plotly/FakePlotly.js"
    }
  }
}
